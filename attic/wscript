def build(ctx):
    bldnode = ctx.bldnode.abspath()

    util = ['sht']

    for name in util:
        ctx(
            target=name,
            features="c cprogram bld_include src_include",
            source=[name + ".c"],
            includes=["%s/%s/" % (bldnode, name)],
            use="ntp isc M SSL CRYPTO RT THR PTHREAD",
            install_path=None,
        )
