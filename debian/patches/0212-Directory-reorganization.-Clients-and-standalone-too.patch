+        raise SystemExit(2)
+    tries = 100
+    sleep = 6
+    verbose = 0
+    for (switch, val) in options:
+        if switch in ("-n", "--tries"):
+            tries = int(val)
+        elif switch in ("-s", "--sleep"):
+            sleep = int(val)
+        elif switch in ("-v", "--verbose"):
