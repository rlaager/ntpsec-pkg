 [Service]
 Type=oneshot
-ExecStart=/usr/sbin/ntpwait -s 1 -n 30000
+ExecStart=/usr/sbin/ntpwait -s 1 -n 30000 -q
 RemainAfterExit=yes
 StandardOutput=null
 
