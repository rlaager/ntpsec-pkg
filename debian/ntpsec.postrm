#!/bin/sh

set -e

installinit_error() {
	exit $?
}

#DEBHELPER#

if [ "$1" = "purge" ]; then
	if ! LANG=C dpkg -s ntp > /dev/null 2>&1
	then
		rm -rf /var/lib/ntp/
		rm -rf /var/log/ntpstats/
	fi
	if ! LANG=C dpkg -s ntpsec-ntpviz 2> /dev/null | \
	     grep -qE "^Status: (hold|install)"; then
		deluser --system --quiet ntp || true
	fi
fi
